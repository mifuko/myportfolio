"use client";

import { motion, useScroll, useTransform } from "framer-motion";
import { useRef } from "react";
import Navbar from "./components/Navbar";
import BlogPage from "./blog/page";

export default function Home() {
  const ref = useRef<HTMLDivElement>(null);

  // 监听整个页面滚动，而不是 section
  const { scrollY } = useScroll();

  // 背景视差效果：滚动时让背景稍微向上移动
  const backgroundY = useTransform(scrollY, [0, 500], ["0%", "-20%"]);
  const opacity = useTransform(scrollY, [0, 300], [1, 0]);
  const y = useTransform(scrollY, [0, 300], [0, -100]);

  return (
    <main className="w-full min-h-[200vh] text-white scroll-smooth">
      {/* 第一屏 */}
      <section
        ref={ref}
        className="relative h-screen w-full flex items-center justify-center overflow-hidden"
      >
        {/* 背景图 + 视差 */}
        <motion.div
          style={{
            y: backgroundY,
            backgroundImage: "url('/day1bg.png')",
            backgroundSize: "cover",
            backgroundPosition: "center",
          }}
          className="absolute inset-0"
        ></motion.div>

        {/* 蓝紫色遮罩层 */}
        <div className="absolute inset-0 bg-gradient-to-tr from-indigo-900/40 to-blue-900/15 pointer-events-none"></div>

        {/* 底部渐变（衔接到 blog） */}
        <div className="absolute bottom-0 left-0 w-full h-64 bg-gradient-to-b from-transparent via-neutral-100/70 to-white pointer-events-none"></div>

        {/* 导航栏 */}
        <Navbar />

        {/* 打字动画 + 淡出 */}
        <motion.div style={{ opacity, y }} className="relative z-10 text-center">
          <h1 className="typing-text text-6xl font-bold text-white whitespace-nowrap overflow-hidden border-r-4 border-r-white pr-5">
            Hi, I’m Nightmare Walker 👋
          </h1>
          <p className="text-xl max-w-md mx-auto leading-relaxed">
            Exploring code, creativity, and the world of Web3.
          </p>
          <a
            href="#blog"
            className="absolute bottom-10 animate-bounce text-sm opacity-75 hover:opacity-100 transition"
          >
            Scroll ↓
          </a>
        </motion.div>
      </section>

      {/* Blog Section */}
      <section
        id="blog"
        className="relative bg-neutral-50 text-black min-h-screen shadow-[0_-10px_30px_rgba(0,0,0,0.1)]"
      >
        {/* 顶部反向渐变衔接 */}
        <div className="absolute top-0 left-0 w-full h-48 bg-gradient-to-b from-white to-transparent pointer-events-none"></div>
        <BlogPage />
      </section>
    </main>
  );
}

